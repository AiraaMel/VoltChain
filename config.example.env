# VoltChain Energy Platform Environment Configuration

# Solana Configuration
ANCHOR_PROVIDER_URL=https://api.devnet.solana.com
ANCHOR_WALLET=~/.config/solana/id.json

# Keypair Path (optional, defaults to ~/.config/solana/id.json)
KEYPAIR_PATH=~/.config/solana/id.json

# Program ID (will be set after deployment)
PROGRAM_ID=VoltChainEnergy1111111111111111111111111111111111

# VoltChain Mint Address (will be created during setup)
VOLTCHAIN_MINT=11111111111111111111111111111111

# Authority (deployer wallet)
AUTHORITY=your_authority_wallet_here
